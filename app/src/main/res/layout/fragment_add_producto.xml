<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.add_producto.AddProductoFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_nuevo_producto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nuevo Producto"
            android:textSize="25sp"
            android:layout_marginStart="25dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/et_nombre_producto"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nombre"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:layout_below="@id/tv_nuevo_producto"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_descripcion"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Descripcion"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:layout_below="@id/et_nombre_producto"
            android:inputType="textMultiLine"
            android:scrollbars="vertical"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_precio"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Precio"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="number"
            android:layout_below="@id/et_descripcion"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/et_cantidad"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Cantidad"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="number"
            android:layout_below="@id/et_precio"
            android:textSize="15sp" />


        <EditText
            android:id="@+id/et_peso"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Peso(g)"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:inputType="number"
            android:layout_below="@id/et_cantidad"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_agregar_producto"
            android:layout_width="371dp"
            android:layout_height="62dp"
            android:layout_below="@id/et_peso"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:text="Agregar" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>