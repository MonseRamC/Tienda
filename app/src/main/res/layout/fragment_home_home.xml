<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeHomeFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario : [Data]"
            android:textSize="20sp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="32dp"
            android:layout_alignParentTop="true"/>


        <TextView
            android:id="@+id/tv_user_foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Foto:"
            android:textSize="18sp"
            android:layout_below="@id/user_info"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/user_foto"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginLeft="120dp"
        android:layout_below="@id/tv_user_foto"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/user_hubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hubicacion : [Data]"
            android:textSize="18sp"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/user_foto"/>

        <TextView
            android:id="@+id/tv_temperatura"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Temperatura ambiente : "
            android:textSize="18sp"
            android:layout_below="@id/user_hubicacion"
            android:layout_marginStart="25dp"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="24dp"/>

        <Button
            android:id="@+id/btn_nuevafoto"
            android:layout_width="371dp"
            android:layout_height="62dp"
            android:layout_below="@id/tv_temperatura"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:text="Nueva Foto" />

        <Button
            android:id="@+id/btn_nuevahubicacion"
            android:layout_width="371dp"
            android:layout_height="62dp"
            android:layout_below="@id/btn_nuevafoto"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_centerHorizontal="true"
            android:text="Nueva Hubicacion" />

    </RelativeLayout>

</FrameLayout>